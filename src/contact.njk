---
title: Contact
---

{% extends "layout.njk" %}

{% block body %}
  <main class="p-4 prose mx-auto">
    <h1>Send me a message!</h1>
    <form name="profile-contact" method="POST" data-netlify="true" data-netlify-recaptcha="true">
      <p class="flex">
        <label for="name" class="inline-block w-32">Your Name: </label><input type="text" name="name" class="border border-gray-400" />
      </p>
      <p class="flex">
        <label for="email" class="inline-block w-32">Your Email: </label><input type="email" name="email" class="border border-gray-400" />
      </p>
      <p class="flex">
        <label for="message" class="inline-block w-32">Message: </label><textarea name="message" class="border border-gray-400" ></textarea>
      </p>
      <div data-netlify-recaptcha="true"></div>
      <p>
        <button type="submit" class="p-2 border-2 rounded-lg bg-teal-800 text-white font-semibold">Send Message</button>
      </p>
    </form>
  </main>
{% endblock %}
